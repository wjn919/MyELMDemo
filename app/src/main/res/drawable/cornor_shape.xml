<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#0023ff" />
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:bottom="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="#ffbbffff" />
            <corners android:radius="30dp"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>