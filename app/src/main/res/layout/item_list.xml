<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/font_whiter"

    >

    <ImageView

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/one"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_item_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="麻酱牛筋面"
            android:textSize="16sp"
            android:textColor="#000000"
            android:padding="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >
            <TextView
                android:id="@+id/tv_item_month_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月售出126份"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_item_good_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评率100%"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="凉皮先生"
            android:textSize="12sp"
            android:padding="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥13"
                android:textSize="16sp"
                android:textColor="#ff0000"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_item_cheap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="满20减6"
                android:textSize="10sp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_marginLeft="5dp"
                android:background="@color/all_page_bg"
                android:layout_toRightOf="@+id/tv_item_price"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="来一份"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/cornor_shape_red"
                android:textColor="@color/font_red"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>